#!/usr/bin/expect -f

set timeout 20
set hostname [lindex $argv 0]
set username [lindex $argv 1]
set password [lindex $argv 2]

set timeout -1
spawn ssh -q -o StrictHostKeyChecking=no $username@$hostname
expect "password: "
send "$password\r"
expect "# "
send "scope user-policy\r"
expect "# "
send "set password-policy disabled\r"
expect "# "
send "commit\r"
expect "# "
